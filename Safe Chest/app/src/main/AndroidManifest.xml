<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programmation.safechest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SafeChest"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".EcranAccueil"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EcranConnexion"
            android:label="@string/connect">

        </activity>

        <activity
            android:name=".EcranInscription"
            android:label="Inscription">

        </activity>

        <activity
            android:name=".ListeComptesActivity"
            android:label="Vos comptes"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        </application>

</manifest>